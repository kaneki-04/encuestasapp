@model IEnumerable<GestorEncuestas_MVC.Models.Encuesta>

@{
    ViewData["Title"] = "Encuestas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Encuestas</h1>
    <a asp-action="Create" class="btn btn-primary">Nueva Encuesta</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Título</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Cierra En</th>
                <th>Autor</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>
                        <span class="badge @(item.Estado == "Activa" ? "bg-success" : "bg-secondary")">
                            @Html.DisplayFor(modelItem => item.Estado)
                        </span>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.CierraEn)</td>
                    <td>@(item.Autor?.UserName ?? "N/A")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                            <a asp-action="CreatePregunta" asp-route-id="@item.Id" class="btn btn-success btn-sm">Agregar Pregunta</a>
                            <a asp-controller="Respuestas" asp-action="Responder" asp-route-id="@item.Id" 
                               class="btn btn-primary btn-sm">
                                <i class="fas fa-edit me-1"></i>Responder
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
