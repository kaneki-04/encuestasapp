@model GestorEncuestas_MVC.Models.RegisterViewModel

@{
    ViewData["Title"] = "Registrarse";
    Layout = "_LayoutAuth";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2><i class="fas fa-user-plus me-2"></i>Crear Cuenta</h2>
            <p class="text-secondary">Únete a nuestra comunidad</p>
        </div>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Elige un nombre de usuario" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Crea una contraseña segura" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirma tu contraseña" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-auth">
                <i class="fas fa-user-plus me-2"></i>Registrarse
            </button>
        </form>

        <div class="auth-footer mt-3">
            <p class="text-center">¿Ya tienes una cuenta? <a asp-action="Login" class="text-primary">Inicia sesión aquí</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}